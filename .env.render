# Render Configuration
RENDER=true
PYTHON_VERSION=3.11

# Keep-alive
KEEP_ALIVE_ENABLED=true
KEEP_ALIVE_INTERVAL_MINUTES=14

# Redis (from Render addon)
REDIS_URL=redis://:PASSWORD@redis-instance.onrender.com:6379

# MongoDB (Atlas recommended for Render)
DATABASE_URL=mongodb+srv://user:pass@cluster.mongodb.net/job_hunter?retryWrites=true&w=majority

# Performance tuning
MAX_CONNECTIONS_POOL=10
QUERY_TIMEOUT_MS=30000
DEBUG=false
